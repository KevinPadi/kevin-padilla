---
import Hero from "./hero.astro";
import ProjectsSection from "./projects-section.astro";
import EducationSection from "./education-section.astro";
import StackSection from "./stack-section.astro";
import FooterSection from "./footer-section.astro";
---

<div class="mx-auto min-h-screen w-full max-w-5xl p-2 sm:p-4 space-y-20">
	<Hero />
	<ProjectsSection />
	<StackSection />
	<EducationSection />
	<FooterSection />
</div>

<script>
	import { animate, easeOut, inView } from "motion";

	inView("#section-header", (element) => {
		animate(
			element,
			{ opacity: 1, y: [50, 0] },
			{
				duration: 0.4,
				delay: 0.3,
				easing: easeOut,
			},
		);
	});
</script>
